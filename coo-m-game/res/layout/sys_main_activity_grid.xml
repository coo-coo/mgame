<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/gridview_adapter_common" >

    <ImageView
        android:id="@+id/iv_sysmain_game_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_blank" />

    <TextView
        android:id="@+id/iv_sysmain_game_label"
        style="@style/tv_common"
        android:layout_width="100dp"
        android:layout_below="@+id/iv_sysmain_game_icon"
        android:layout_centerHorizontal="true" />

</RelativeLayout>